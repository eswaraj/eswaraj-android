<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue_background"
    tools:context="com.next.eswaraj.activities.SplashActivity">

    <ImageView
        android:id="@+id/auLogo"
        android:src="@drawable/logo"
        android:layout_centerInParent="true"
        android:layout_width="180dp"
        android:layout_height="140dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Version 1.2.6"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="85dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/auLogo"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Media Partners"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="190dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:visibility="gone"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="3"
        android:layout_marginTop="200dp"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />


        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp" />


        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp" />


        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />


        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp" />

    </GridLayout>

</RelativeLayout>
