<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eswaraj.app.eswaraj.fragments.ContentFragment">

    <ImageView
        android:id="@+id/cBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/banner_water"
        android:scaleType="fitXY"
        android:layout_margin="10dp" />

    <TextView
        android:text="Content"
        android:textSize="30dp"
        android:paddingTop="80dp"
        android:paddingLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/cVideoListTitle"
        android:layout_below="@+id/cBanner"
        android:text="Videos"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#DE593A"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF" />

    <com.eswaraj.app.eswaraj.widgets.NonScrollableListView
        android:id="@+id/cVideoList"
        android:layout_below="@+id/cVideoListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp"
        android:divider="@color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
