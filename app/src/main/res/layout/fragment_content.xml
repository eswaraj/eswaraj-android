<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eswaraj.app.eswaraj.fragments.ContentFragment">

    <ImageView
        android:id="@+id/cBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:text="Content"
        android:textSize="30dp"
        android:paddingTop="80dp"
        android:paddingLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cVideoListTitle"
        android:layout_below="@+id/cBanner"
        android:text="Videos"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.eswaraj.app.eswaraj.widgets.NonScrollableListView
        android:id="@+id/cVideoList"
        android:layout_below="@+id/cVideoListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
