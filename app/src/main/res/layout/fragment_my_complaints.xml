<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eswaraj.app.eswaraj.fragments.MyComplaintsFragment"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/mcPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/mcName"
            android:text="Name"
            android:layout_below="@+id/mcPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/mcPhoto"
            android:text="My Complaints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.1">

    <Button
        android:id="@+id/mcShowList"
        android:text="List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mcShowMap"
        android:text="Map"
        android:layout_toRightOf="@+id/mcShowList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mcShowAnalytics"
        android:text="Analytics"
        android:layout_toRightOf="@+id/mcShowMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/mcMapContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/mcAnalyticsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/mcChartContainer"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <GridView
                android:id="@+id/mcAmenityList"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:numColumns="3">
            </GridView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcListContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Open Complaints"
                android:textColor="@color/red_btn_bg_color"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/mcListOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>

            <TextView
                android:text="Closed Complaints"
                android:textColor="@color/red_btn_bg_color"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/mcListClosed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
