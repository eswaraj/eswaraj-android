<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eswaraj.app.eswaraj.activities.MarkHomeActivity">

    <FrameLayout
        android:id="@+id/mhContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:src="@drawable/anon_loc_grey"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <EditText
        android:id="@+id/mhSearchText"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_weight="0.3" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:id="@+id/mlButtons"
        android:layout_below="@+id/mhSearchText">

        <Button
            android:id="@+id/mhSaveLocation"
            android:text="Save Location"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#0099cc" />

        <Button
            android:id="@+id/mhSkip"
            android:text="Skip"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:background="#DE593A"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout>
