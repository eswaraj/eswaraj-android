<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff1bd48"
    tools:context="com.eswaraj.app.eswaraj.fragments.LoginFragment"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/navbar_logo"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/welcomeText"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.7" />



        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/RelativeLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="bottom|center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:gravity="bottom|center_vertical|center_horizontal">

            <com.facebook.widget.LoginButton
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/buttonQuit"
                android:text="@string/quitButtonText"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="-5dp"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/buttonGotIt"
                android:text="@string/gotItButtonText"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="-5dp"
                android:layout_centerInParent="true" />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/splashProgressWheel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                wheel:barColor="#5588FF"
                wheel:progressIndeterminate="true" />

        </RelativeLayout>


</LinearLayout>