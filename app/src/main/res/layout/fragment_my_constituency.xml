<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.next.eswaraj.fragments.MyConstituencyFragment"
    android:background="#ffffff">

    <com.next.eswaraj.widgets.CustomScrollView
        android:id="@+id/cScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="#f2f2f2"
                android:weightSum="1">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/banner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    >

                    <ImageView
                        android:id="@+id/cPhoto"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"/>


                    <TextView
                        android:id="@+id/issue_issues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="16dp"
                        android:drawableLeft="@drawable/ic_issue_issues"
                        android:drawablePadding="12dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/cName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/issue_bullet"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="-16dp"
                        android:layout_toRightOf="@+id/issue_bullet"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/issue_bullet"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/ic_issue_bullet" >
                    </View>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:layout_weight="0.7">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_weight="3"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">

                        <ImageView android:id="@+id/cShowList"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/list_icon"
                            android:layout_weight="0.2" />

                        <TextView android:id="@+id/cShowList_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:textColor="#929292"
                            android:maxLines="1"
                            android:text="List"
                            android:layout_weight="0.8"
                            android:layout_marginTop="-8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_weight="3"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp">

                        <ImageView android:id="@+id/cShowMap"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/map_view"
                            android:layout_weight="0.2"/>

                        <TextView android:id="@+id/cShowMap_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:textColor="#929292"
                            android:maxLines="1"
                            android:text="Map"
                            android:layout_weight="0.8"
                            android:layout_marginTop="-8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_weight="3"
                        android:focusableInTouchMode="false"
                        android:paddingRight="22dp"
                        android:paddingLeft="22dp">

                        <ImageView android:id="@+id/cShowAnalytics"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/analytics_icon"
                            android:layout_weight="0.2" />

                        <TextView android:id="@+id/cShowAnalytics_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:textColor="#929292"
                            android:maxLines="1"
                            android:text="Analytics"
                            android:layout_weight="0.8"
                            android:layout_marginTop="-10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_weight="3"
                        android:focusableInTouchMode="false"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp">

                        <ImageView android:id="@+id/cShowInfo"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/info_icon"
                            android:layout_weight="0.2" />

                        <TextView android:id="@+id/cShowInfo_label"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            android:textColor="#929292"
                            android:maxLines="1"
                            android:text="Info"
                            android:layout_weight="0.8"
                            android:layout_marginTop="-10dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cDataView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/cMapContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">
                    <LinearLayout
                        android:id="@+id/cMapButtons"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/heatmap"
                            android:text="Heatmap"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/cluster"
                            android:text="Cluster"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/marker"
                            android:text="Markers"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/cMap"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cAnalyticsContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <FrameLayout
                        android:id="@+id/cChartContainer"
                        android:layout_gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="200dp"/>
                    <com.next.eswaraj.widgets.NonScrollableGridView
                        android:id="@+id/cAmenityList"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:numColumns="3">
                    </com.next.eswaraj.widgets.NonScrollableGridView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cInfoContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                            <TextView
                                android:text="Total Houses"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalHouses"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalPopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Male Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalMalePopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Female Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalFemalePopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Literate Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalLiteratePopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Male Literate Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalMaleLiteratePopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Female Literate Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalFemaleLiteratePopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Working Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalWorkingPopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Male Working Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalMaleWorkingPopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Total Female Working Population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cTotalFemaleWorkingPopulation"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cArea"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp">
                        <TextView
                                android:text="Perimeter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/cPerimeter"
                                android:text="Unknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cListContainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:text="Open Complaints"
                        android:textColor="@color/red_btn_bg_color"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="5dp" />

                    <com.next.eswaraj.widgets.NonScrollableListView
                        android:id="@+id/cListOpen"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"/>

                    <TextView
                        android:text="Closed Complaints"
                        android:textColor="@color/red_btn_bg_color"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="5dp" />

                    <com.next.eswaraj.widgets.NonScrollableListView
                        android:id="@+id/cListClosed"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"/>

                    <Button
                        android:id="@+id/cShowMore"
                        android:text="Show More"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </com.next.eswaraj.widgets.CustomScrollView>

</LinearLayout>
