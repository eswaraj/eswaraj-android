<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="0dp"
    tools:context="com.eswaraj.app.eswaraj.activities.HomeActivity"
    android:background="#f5f5f5f5">

    <include
        android:id="@+id/logo_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/screen_header" />

    <fragment
        class="com.eswaraj.app.eswaraj.fragments.GoogleMapFragment"
        android:id="@+id/hMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="16dp"/>

    <com.eswaraj.app.eswaraj.widgets.ProgressTextView
        android:id="@+id/hRevGeocode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="-15dp"
        android:textColor="#929292"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/hCreate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/raise_complaint"
            android:layout_weight="1"
            android:layout_marginBottom="-10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="1"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingRight="5dp">
            <ImageView
                android:id="@+id/hComplaints"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:src="@drawable/my_complaints"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"
            android:paddingLeft="5dp">
            <ImageView
                android:id="@+id/hConstituency"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:src="@drawable/my_constituency"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="1"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingRight="5dp">
            <ImageView
                android:id="@+id/hLeaders"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:src="@drawable/my_leader"
                android:layout_weight="0.7"
                android:paddingBottom="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:paddingLeft="5dp">
                <ImageView
                    android:id="@+id/hProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/my_profile"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="0.7"
                    android:paddingBottom="10dp" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>
