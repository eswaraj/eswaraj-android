<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.next.eswaraj.fragments.CommentsFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cComment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.15"
            android:hint="Leave a Comment"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/cSend"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_weight="0.85"
            android:src="@drawable/post_comment_imageview"
            android:layout_marginRight="5dp" />

    </LinearLayout>


    <com.next.eswaraj.widgets.NonScrollableListView
        android:id="@+id/cOldComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.next.eswaraj.widgets.NonScrollableListView>

    <Button
        android:id="@+id/cShowMore"
        android:text="@string/fcShowMore"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_darkblue_highlight"
        android:textColor="#FFFFFF" />

</LinearLayout>
