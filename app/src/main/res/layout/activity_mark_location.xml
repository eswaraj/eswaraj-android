<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:layout_gravity="bottom|center"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_weight="1">
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/mlSearchText"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/mlSearchButton"
            android:text="Search"
            android:gravity="center"
            android:background="#92B06A"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="0.7"
            android:layout_below="@+id/mlContainer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mlContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout"
        android:background="#ffffff">
    </FrameLayout>

</RelativeLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal">
        <Button
            android:id="@+id/mlSaveLocation"
            android:text="Save Location"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#0099cc"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2.5dp" />
        <Button
            android:id="@+id/mlSkip"
            android:text="Skip"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:background="#DE593A"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:shadowRadius="1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2.5dp" />
    </LinearLayout>
</LinearLayout>
