<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_taken_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="120dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/chosen_pic_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/issue_details_image_container"
            android:layout_centerVertical="true"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/adPhotoDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cropToPadding="true"
                android:scaleType="fitXY" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp">

            <Button
                android:id="@+id/adDeletePhoto"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/issue_detail_button"
                android:drawableLeft="@drawable/ic_delete"
                android:drawablePadding="2dp"
                android:text="@string/removePhoto"
                android:textColor="#0099cc"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="top"
                android:layout_marginBottom="5dp" />

            <Button
                android:id="@+id/adRetakePhoto"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/issue_detail_button"
                android:drawableLeft="@drawable/ic_retake"
                android:drawablePadding="2dp"
                android:text="@string/retakePhoto"
                android:textColor="#0099cc"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
