<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.next.eswaraj.activities.SplashActivity">

    <com.next.eswaraj.widgets.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="100dp" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RadioGroup
            android:id="@+id/sRadioGroup"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:divider="@drawable/radio_group_divider"
            android:showDividers="middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/sProgressWheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:barColor="#FFFFFF"
            android:visibility="invisible"
            wheel:progressIndeterminate="true" />

        <Button
            android:id="@+id/sContinue"
            android:visibility="invisible"
            android:background="@drawable/lets_get_started_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/sRetry"
            android:visibility="invisible"
            android:background="@drawable/try_again_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="60dp" />

    </RelativeLayout>

</RelativeLayout>
