<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eswaraj.app.eswaraj.activities.SplashActivity">

    <com.eswaraj.app.eswaraj.widgets.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_marginTop="520dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <RadioGroup
        android:id="@+id/sRadioGroup"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:divider="@drawable/radio_group_divider"
        android:showDividers="middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/sProgressWheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:barColor="#FFFFFF"
        android:visibility="invisible"
        wheel:progressIndeterminate="true" />

    <Button
        android:id="@+id/sContinue"
        android:visibility="invisible"
        android:background="@drawable/lets_get_started_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="200dp"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/sRetry"
        android:visibility="invisible"
        android:background="@drawable/try_again_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="200dp"
        android:layout_height="70dp" />

    </RelativeLayout>

</RelativeLayout>
