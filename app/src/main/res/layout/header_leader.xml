<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/white">

        <com.next.eswaraj.widgets.CustomNetworkImageView
            android:id="@+id/lPhoto"
            android:layout_width="fill_parent"
            android:layout_height="270dp"
            android:src="@drawable/anon"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:layout_weight="0.2"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_weight="0.8">

            <Button
                android:id="@+id/lPromise"
                android:background="@drawable/blue_darkblue_highlight"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/icon_promise"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/lConstituency"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/greygreen_darkgreygreen_highlight"
                android:drawableLeft="@drawable/map_view_white"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/lEmail"
                android:background="@drawable/blue_darkblue_highlight"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/icon_email"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/lPhone"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/greygreen_darkgreygreen_highlight"
                android:drawableLeft="@drawable/icon_phone"
                android:textColor="@color/white"
                android:layout_weight="0.25"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/lAge_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaderAgeLabel"
                android:gravity="left"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/lAge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaderAge"
                android:gravity="right"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/lEducation_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaderEduLabel"
                android:gravity="left"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/lEducation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaderEdu"
                android:gravity="right"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/lAddress_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/leadAddrLabel"
                android:gravity="left"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/lAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaderAddr"
                android:gravity="right"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/lName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leaderDesignationLabel"
            android:layout_marginLeft="20dp"
            android:textColor="#606060" />

        <TextView
            android:id="@+id/lNamelPost_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/separator"
            android:layout_toRightOf="@+id/lName"
            android:layout_marginLeft="10dp"
            android:textColor="#606060" />

        <TextView
            android:id="@+id/lPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leaderDesignation"
            android:layout_toRightOf="@+id/lNamelPost_separator"
            android:layout_marginLeft="10dp"
            android:textColor="#606060"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/white"
        android:gravity="top"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/lPoliticalParty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaderPartyLabel"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lParty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaderParty"
            android:gravity="top|center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lBiodata"
            android:text="@string/bioData"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:padding="5dp" />

        <WebView
            android:id="@+id/lDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>