<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.next.eswaraj.activities.ComplaintFilterActivity"
    android:background="@color/transparent">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="50dp"
    android:background="#DBDBDB"
    android:layout_marginTop="55dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView android:text="@string/cfCitizenServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/navy_blue_background"
                android:padding="15dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp" />

            <GridView
                android:id="@+id/cfCategoryList"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"/>


            <TextView android:text="@string/cfComplaintStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/navy_blue_background"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/white"
                android:layout_marginBottom="5dp" />

            <GridView
                android:id="@+id/cfStatusList"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <Button
                android:id="@+id/cfApply"
                android:text="@string/cfApplyFilter"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/blue_darkblue_highlight"
                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/cfNone"
                android:text="@string/cfRemoveAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="15dp"
                android:textColor="@color/white"
                android:background="@drawable/red_darkred_highlight"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
