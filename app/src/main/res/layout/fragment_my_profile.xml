<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eswaraj.app.eswaraj.fragments.MyProfileFragment">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/mpPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/mpName"
            android:layout_below="@+id/mpPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="My Profile"
            android:layout_toRightOf="@+id/mpPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:text="Update Home Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/mpMarkLocation"
        android:src="@drawable/ic_info"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <Button
        android:id="@+id/mpLogout"
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mpInputName"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/mpSave"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/mpCancel"
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
