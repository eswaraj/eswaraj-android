<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eswaraj.app.eswaraj.fragments.LeaderFragment">

    <include
        android:id="@+id/logo_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/screen_header" />

    <ImageView
        android:id="@+id/lPhoto"
        android:layout_below="@+id/logo_header"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/lName"
        android:layout_toRightOf="@+id/lPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lPost"
        android:layout_below="@+id/lPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/lConstituency"
        android:layout_toRightOf="@+id/lPhoto"
        android:layout_alignTop="@+id/lPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <WebView
        android:id="@+id/lDetails"
        android:layout_below="@+id/lPost"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

</RelativeLayout>
