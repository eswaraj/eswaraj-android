<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="340dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/splash_pager_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/splash_pager_heading"
        android:textColor="#ffffff" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/splash_pager_text"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_weight="2"
        android:paddingBottom="8dp">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/splashProgressWheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:barColor="#FFFFFF"
            android:visibility="invisible"
            wheel:progressIndeterminate="true" />

        <Button
            android:id="@+id/splash_pager_button_continue"
            android:visibility="invisible"
            android:background="@drawable/lets_get_started_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/splash_pager_button_retry"
            android:visibility="invisible"
            android:background="@drawable/try_again_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="70dp" />

        <RadioGroup
            android:id="@+id/splashRadioGroup"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:divider="@drawable/radio_group_divider"
            android:showDividers="middle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>